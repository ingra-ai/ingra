{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@repo/db/*": ["../../../packages/database/src/*"],
      "@repo/shared/*": ["../../../packages/shared/src/*"]
    }
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
